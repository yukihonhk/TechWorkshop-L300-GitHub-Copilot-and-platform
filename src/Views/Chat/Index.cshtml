@model List<ZavaStorefront.Services.ChatMessage>
@{
    ViewData["Title"] = "Chat Assistant";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-chat-dots"></i> Zava Chat Assistant</h4>
                    <form asp-action="ClearChat" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-trash"></i> Clear Chat
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    <!-- Chat History -->
                    <div id="chatHistory" class="border rounded p-3 mb-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                        @if (Model == null || Model.Count == 0 || Model.All(m => m.Role == "system"))
                        {
                            <div class="text-center text-muted mt-5">
                                <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                                <p class="mt-2">Start a conversation with our AI assistant!</p>
                                <p class="small">Ask about products, get recommendations, or just say hello.</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var message in Model.Where(m => m.Role != "system"))
                            {
                                @if (message.Role == "user")
                                {
                                    <div class="d-flex justify-content-end mb-3">
                                        <div class="bg-primary text-white rounded p-2 px-3" style="max-width: 75%;">
                                            <small class="d-block fw-bold mb-1">You</small>
                                            @message.Content
                                        </div>
                                    </div>
                                }
                                else if (message.Role == "assistant")
                                {
                                    <div class="d-flex justify-content-start mb-3">
                                        <div class="bg-white border rounded p-2 px-3" style="max-width: 75%;">
                                            <small class="d-block fw-bold mb-1 text-success">
                                                <i class="bi bi-robot"></i> Assistant
                                            </small>
                                            @message.Content
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>

                    <!-- Message Input -->
                    <form asp-action="SendMessage" method="post">
                        <div class="input-group">
                            <input type="text" name="userMessage" class="form-control" 
                                   placeholder="Type your message..." 
                                   autocomplete="off" autofocus required />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Send
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center small">
                    Powered by Microsoft Phi-4 via Azure AI Foundry
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll chat to bottom
        var chatHistory = document.getElementById('chatHistory');
        if (chatHistory) {
            chatHistory.scrollTop = chatHistory.scrollHeight;
        }
    </script>
}
